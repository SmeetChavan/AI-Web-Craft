{
  "openapi": "3.0.0",
  "info": {
    "title": "Coffee API",
    "version": "1.0.0",
    "description": "API for managing coffee information"
  },
  "servers": [
    {
      "url": "http://localhost:4000",
      "description": "Api server"
    }
  ],
  "paths": {
    "/coffees/list": {
      "get": {
        "operationId": "ListCoffees",
        "summary": "Get a list of coffees",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number"
                      },
                      "name": {
                        "type": "string"
                      },
                      "price": {
                        "type": "number"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/coffees/details/{id}": {
      "get": {
        "operationId": "GetCoffeeDetails",
        "summary": "Get details of a specific coffee",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the coffee",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "number"
                    },
                    "name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "price": {
                      "type": "number"
                    },
                    "currency": {
                      "type": "string"
                    },
                    "temperature": {
                      "type": "string"
                    },
                    "calories": {
                      "type": "string"
                    },
                    "deliveryTime": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Coffee not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
